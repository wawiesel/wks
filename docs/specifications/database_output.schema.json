{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wks/specifications/database_output.schema.json",
  "title": "WKS Database Output Schemas",
  "type": "object",
  "definitions": {
    "Base": {
      "type": "object",
      "properties": {
        "errors": { "type": "array", "items": { "type": "string" } },
        "warnings": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["errors", "warnings"],
      "additionalProperties": true
    },
    "DatabaseListOutput": {
      "allOf": [
        { "$ref": "#/definitions/Base" },
        {
          "type": "object",
          "properties": {
            "databases": { "type": "array", "items": { "type": "string" } }
          },
          "required": ["databases"],
          "additionalProperties": false
        }
      ]
    },
    "DatabaseShowOutput": {
      "allOf": [
        { "$ref": "#/definitions/Base" },
        {
          "type": "object",
          "properties": {
            "database": { "type": "string" },
            "query": { "type": "object", "additionalProperties": true },
            "limit": { "type": "integer" },
            "count": { "type": "integer" },
            "results": {
              "type": "array",
              "items": { "type": "object", "additionalProperties": true }
            }
          },
          "required": ["database", "query", "limit", "count", "results"],
          "additionalProperties": false
        }
      ]
    },
    "DatabaseResetOutput": {
      "allOf": [
        { "$ref": "#/definitions/Base" },
        {
          "type": "object",
          "properties": {
            "database": { "type": "string" },
            "deleted_count": { "type": "integer" }
          },
          "required": ["database", "deleted_count"],
          "additionalProperties": false
        }
      ]
    }
  },
  "oneOf": [
    { "$ref": "#/definitions/DatabaseListOutput" },
    { "$ref": "#/definitions/DatabaseShowOutput" },
    { "$ref": "#/definitions/DatabaseResetOutput" }
  ]
}

