#!/bin/bash
# WKS Daemon control script

WKS_DIR="$HOME/2025-WKS"
VENV="$WKS_DIR/venv"
PID_FILE="$HOME/.wks/daemon.pid"
LOG_FILE="$HOME/.wks/daemon.log"

case "$1" in
    start)
        if [ -f "$PID_FILE" ]; then
            PID=$(cat "$PID_FILE")
            if ps -p $PID > /dev/null 2>&1; then
                echo "WKS daemon is already running (PID: $PID)"
                exit 1
            fi
        fi

        echo "Starting WKS daemon..."
        mkdir -p "$HOME/.wks"
        cd "$WKS_DIR"
        source "$VENV/bin/activate"
        nohup python -m wks.daemon > "$LOG_FILE" 2>&1 &
        echo $! > "$PID_FILE"
        echo "WKS daemon started (PID: $(cat $PID_FILE))"
        echo "Log: $LOG_FILE"
        ;;

    stop)
        if [ ! -f "$PID_FILE" ]; then
            echo "WKS daemon is not running"
            exit 1
        fi

        PID=$(cat "$PID_FILE")
        echo "Stopping WKS daemon (PID: $PID)..."
        kill $PID
        rm "$PID_FILE"
        echo "WKS daemon stopped"
        ;;

    restart)
        $0 stop
        sleep 1
        $0 start
        ;;

    status)
        if [ -f "$PID_FILE" ]; then
            PID=$(cat "$PID_FILE")
            if ps -p $PID > /dev/null 2>&1; then
                echo "WKS daemon is running (PID: $PID)"
                exit 0
            else
                echo "WKS daemon is not running (stale PID file)"
                exit 1
            fi
        else
            echo "WKS daemon is not running"
            exit 1
        fi
        ;;

    log)
        if [ -f "$LOG_FILE" ]; then
            tail -f "$LOG_FILE"
        else
            echo "No log file found at $LOG_FILE"
            exit 1
        fi
        ;;

    *)
        echo "Usage: $0 {start|stop|restart|status|log}"
        exit 1
        ;;
esac
