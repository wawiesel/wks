#!/bin/bash
# WKS Daemon control script

WKS_DIR="$HOME/2025-WKS"
VENV="$WKS_DIR/venv"
PID_FILE="$HOME/.wks/daemon.pid"   # legacy, may not be present
LOCK_FILE="$HOME/.wks/daemon.lock" # preferred single-instance marker
LOG_FILE="$HOME/.wks/daemon.log"

case "$1" in
    start)
        # Check lock first
        if [ -f "$LOCK_FILE" ]; then
            PID=$(head -n1 "$LOCK_FILE" 2>/dev/null || echo "")
            if [ -n "$PID" ] && ps -p $PID > /dev/null 2>&1; then
                echo "WKS daemon is already running (PID: $PID)"
                exit 1
            fi
        fi
        # Fallback PID file check
        if [ -f "$PID_FILE" ]; then
            PID=$(cat "$PID_FILE")
            if ps -p $PID > /dev/null 2>&1; then
                echo "WKS daemon is already running (PID: $PID)"
                exit 1
            fi
        fi

        echo "Starting WKS daemon..."
        mkdir -p "$HOME/.wks"
        cd "$WKS_DIR"
        source "$VENV/bin/activate"
        nohup python -m wks.daemon > "$LOG_FILE" 2>&1 &
        DAEMON_PID=$!
        echo $DAEMON_PID > "$PID_FILE" 2>/dev/null || true
        echo "WKS daemon started (PID: $DAEMON_PID)"
        echo "Log: $LOG_FILE"
        ;;

    stop)
        # Prefer lock
        if [ -f "$LOCK_FILE" ]; then
            PID=$(head -n1 "$LOCK_FILE" 2>/dev/null || echo "")
            if [ -n "$PID" ]; then
                echo "Stopping WKS daemon (PID: $PID)..."
                kill $PID 2>/dev/null || true
            fi
        elif [ -f "$PID_FILE" ]; then
            PID=$(cat "$PID_FILE")
            echo "Stopping WKS daemon (PID: $PID)..."
            kill $PID 2>/dev/null || true
        else
            echo "WKS daemon is not running"
            exit 1
        fi
        rm -f "$PID_FILE" "$LOCK_FILE"
        echo "WKS daemon stop signaled"
        ;;

    restart)
        $0 stop
        sleep 1
        $0 start
        ;;

    status)
        if [ -f "$LOCK_FILE" ]; then
            PID=$(head -n1 "$LOCK_FILE" 2>/dev/null || echo "")
            if [ -n "$PID" ] && ps -p $PID > /dev/null 2>&1; then
                echo "WKS daemon is running (PID: $PID)"
                exit 0
            else
                echo "WKS daemon is not running (stale lock)"
                exit 1
            fi
        elif [ -f "$PID_FILE" ]; then
            PID=$(cat "$PID_FILE")
            if ps -p $PID > /dev/null 2>&1; then
                echo "WKS daemon is running (PID: $PID)"
                exit 0
            else
                echo "WKS daemon is not running (stale PID file)"
                exit 1
            fi
        else
            echo "WKS daemon is not running"
            exit 1
        fi
        ;;

    log)
        if [ -f "$LOG_FILE" ]; then
            tail -f "$LOG_FILE"
        else
            echo "No log file found at $LOG_FILE"
            exit 1
        fi
        ;;

    *)
        echo "Usage: $0 {start|stop|restart|status|log}"
        exit 1
        ;;
esac
